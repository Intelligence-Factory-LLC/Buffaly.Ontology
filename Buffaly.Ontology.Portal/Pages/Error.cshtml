@page
@model ErrorModel
@{
    ViewData["Title"] = "Error";
    Layout = string.Empty;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <title>Error Page | 500 | Internal Server Error | Intelligencefactory.ai</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Buffaly Admin Portal" />
    <meta name="author" content="Intelligence Factory" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <link rel="shortcut icon" href="~/images/favicon.ico">

    <link href="~/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/css/app.min.css" rel="stylesheet" type="text/css" id="app-style" />
    <link href="~/css/icons.min.css" rel="stylesheet" type="text/css" />
    <script src="~/js/head.js"></script>
</head>

<body class="authentication-bg authentication-bg-pattern">

    <div class="account-pages mt-5 mb-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <div class="card bg-pattern">

                        <div class="card-body p-4">

                            <div class="auth-logo">
                                <a href="/login" class="logo logo-dark text-center">
                                    <span class="logo-lg">
                                        <img src="~/images/bf_logo-v2.png" alt="" height="22">
                                    </span>
                                </a>

                                <a href="/" class="logo logo-light text-center">
                                    <span class="logo-lg">
                                        <img src="~/images/bf_logo-v2.png" alt="" height="22">
                                    </span>
                                </a>
                            </div>

                            <div class="text-center mt-4">
                                <h1 class="text-error">@Model.HttpStatusCode</h1>
                                <h3 class="mt-3 mb-2">@Model.StatusMessage</h3>
                                <p class="text-muted mb-3">Why not try refreshing your page? or you can contact <a href="https://www.intelligencefactory.ai" class="text-dark"><b>Support</b></a></p>

                                <a href="/login" class="btn btn-success waves-effect waves-light">Back to Home</a>
                            </div>

                            @* --- Detailed error (shown only if ErrorMessage is set by code-behind) --- *@
                            @if (!string.IsNullOrWhiteSpace(Model.ErrorMessage))
                            {
                                <details class="mt-4">
                                    <summary class="fw-bold text-primary">Technical details</summary>
                                    <pre class="mt-3 bg-light p-3 border rounded"
                                         style="white-space: pre-wrap; overflow: auto; max-height: 400px;">
@Model.ErrorMessage
                                    </pre>
                                </details>
                            }

                            @if (Model.ShowRequestId)
                            {
                                <p class="text-muted mt-3 mb-0"><small>Request&nbsp;ID:&nbsp;@Model.RequestId</small></p>
                            }
                        </div> <!-- end card-body -->
                    </div> <!-- end card -->
                </div> <!-- end col -->
            </div> <!-- end row -->
        </div> <!-- end container -->
    </div> <!-- end page -->

    <footer class="footer footer-alt">
       <span class="Year">2025</span> &copy; Buffaly
        <a href="" class="text-white-50">Intelligence Factory</a>
    </footer>

    <script src="~/js/vendor.min.js"></script>
    <script src="~/js/app.min.js"></script>
</body>
</html>